@model LojaRazor.Models.Contato

@using (@Html.BeginForm("Contato", "Home", FormMethod.Post))
{
    <fieldset>
        <legend>Contato</legend>

        @Html.LabelFor(c => c.Nome, "Nome:")
        @Html.TextBoxFor(c => c.Nome)
        @Html.ValidationMessageFor(c => c.Nome)

        @Html.LabelFor(c => c.Email, "Email:")
        @Html.TextBoxFor(c => c.Email)
        @Html.ValidationMessageFor(c => c.Email)

        @Html.LabelFor(c => c.Assunto, "Assunto:")
        @Html.TextBoxFor(c => c.Assunto)
        @Html.ValidationMessageFor(c => c.Assunto)

        @Html.LabelFor(u => u.Mensagem, "Mensagem:")
        @Html.TextAreaFor(u => u.Mensagem)
        @Html.ValidationMessageFor(u => u.Mensagem)

    </fieldset>
    <br>
    <input type="submit" value="Enviar" class="btn btn-large" />
}
